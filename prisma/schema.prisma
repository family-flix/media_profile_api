// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model series {
  id      String   @id
  created DateTime @default(now())
  updated DateTime @default(now())

  // 电视剧名称
  name           String
  // 电视剧原始名称/外文名称
  original_name  String?
  // 别名
  alias          String  @default("")
  // 描述
  overview       String?
  // 海报地址
  poster_path    String?
  // 背景图片
  backdrop_path  String?
  // 首播日期
  first_air_date String?
  // 产地 HK(港剧)、CN(国产剧)、KR(韩剧)、US(美剧)、IN(印度)、JP(日剧)
  origin_country String  @default("")
  // 标签(区分动画，也是用这个字段来区分)
  genres         String  @default("")
  tmdb_id        String? @unique

  seasons season_profile[]

  @@map("Series")
}

model season_profile {
  id      String   @id
  created DateTime @default(now())
  updated DateTime @default(now())

  name           String
  alias          String  @default("")
  overview       String?
  poster_path    String?
  air_date       String?
  order          Int
  episode_count  Int     @default(0)
  vote_average   Float
  in_production  Int     @default(0)
  // 产地 HK(港剧)、CN(国产剧)、KR(韩剧)、US(美剧)、IN(印度)、JP(日剧)
  origin_country String  @default("")
  // 标签(区分动画，也是用这个字段来区分)
  genres         String  @default("")
  tmdb_id        String? @unique

  tv_profile_id String?
  tv_profile    series? @relation(fields: [tv_profile_id], references: [id])

  episodes episode_profile[]
  persons  person_in_media[]

  @@map("SeasonProfile")
}

model episode_profile {
  id      String   @id
  created DateTime @default(now())
  updated DateTime @default(now())

  name       String
  overview   String?
  air_date   String?
  still_path String?
  order      Int
  runtime    Int?
  tmdb_id    String? @unique

  season_profile_id String?
  season_profile    season_profile? @relation(fields: [season_profile_id], references: [id])

  @@map("EpisodeProfile")
}

model movie_profile {
  id      String   @id
  created DateTime @default(now())
  updated DateTime @default(now())

  name              String
  original_name     String?
  alias             String?
  overview          String?
  poster_path       String?
  backdrop_path     String?
  air_date          String?
  original_language String?
  origin_country    String  @default("")
  genres            String  @default("")
  vote_average      Float   @default(0)
  runtime           Int?
  tmdb_id           String? @unique

  persons person_in_media[]

  @@map("MovieProfile")
}

model person_profile {
  id      String   @id
  created DateTime @default(now())
  updated DateTime @default(now())

  name                 String
  profile              String  @default("")
  alias                String?
  biography            String?
  profile_path         String?
  birthday             String?
  place_of_birth       String?
  known_for_department String?

  persons_in_media person_in_media[]

  @@map("PersonProfile")
}

model person_in_media {
  id      String   @id
  created DateTime @default(now())
  updated DateTime @default(now())

  name                 String
  // 顺序
  order                Int
  // 在剧中的职位
  known_for_department String?

  season_id  String?
  season     season_profile? @relation(fields: [season_id], references: [id])
  movie_id   String?
  movie      movie_profile?  @relation(fields: [movie_id], references: [id])
  profile_id String
  profile    person_profile  @relation(fields: [profile_id], references: [id])

  @@map("Person")
}
